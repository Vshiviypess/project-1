<Window x:Class="todoo.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todoo"
        mc:Ignorable="d"
        Title="Window1" Height="343" Width="417">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="39,33,0,0" TextWrapping="Wrap" Text="Добро пожаловать" VerticalAlignment="Top" x:Name="Welcome" FontSize="22" Width="297"/>
        <TextBlock HorizontalAlignment="Left" Margin="41,67,0,0" TextWrapping="Wrap" Text="Введите Имя" VerticalAlignment="Top" x:Name="UserName" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="39,116,0,0" TextWrapping="Wrap" Text="Введите почту" VerticalAlignment="Top" x:Name="Mail" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="44,165,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" x:Name="Password" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="41,217,0,0" TextWrapping="Wrap" Text="Повторите Пароль" VerticalAlignment="Top" x:Name="Repeat" FontSize="16"/>
        <Button Content="Зарегестрироваться" HorizontalAlignment="Left" Margin="222,93,0,0" VerticalAlignment="Top" x:Name="Reg" Height="40" Background="#FFCC6F6F" Click="Reg_Click_1"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="222,151,0,0" VerticalAlignment="Top" x:Name="Back" RenderTransformOrigin="0.5,1" Click="Back_Click" Height="40" Width="114" Background="#FFCC6F6F" BorderThickness="1,1,1,1" ClipToBounds="True">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="nameBox" HorizontalAlignment="Left" Margin="39,93,0,0" TextWrapping="Wrap" Text="Введите имя" VerticalAlignment="Top" Width="120" Opacity="0.4"/>
        <TextBox x:Name="mailBox" HorizontalAlignment="Left" Margin="39,142,0,0" TextWrapping="Wrap" Text="Введите почту" VerticalAlignment="Top" Width="120" Opacity="0.4"/>
        <TextBox x:Name="passBox" HorizontalAlignment="Left" Margin="39,191,0,0" TextWrapping="Wrap" Text="Введтие пароль" VerticalAlignment="Top" Width="120" Opacity="0.4"/>
        <TextBox x:Name="spassBox" HorizontalAlignment="Left" Margin="39,253,0,0" TextWrapping="Wrap" Text="Повторите пароль" VerticalAlignment="Top" Width="120" Opacity="0.4" TextChanged="spassBox_TextChanged"/>

    </Grid>
</Window>
