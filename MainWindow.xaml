<Window x:Name="MainWindow2"
        x:Class="todoo.MainWindow"   
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todoo"
        mc:Ignorable="d"
        Title="MainWindow" Height="283" Width="547">
    <Grid x:Name="MainWindowwww">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Вход" HorizontalAlignment="Left" Margin="20,104,0,0" VerticalAlignment="Top" x:Name="Login" Click="Login_Click" Background="#FF498C51" Height="40" Width="114" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="130,144,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" x:Name="EnterPassword" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="129,85,0,0" TextWrapping="Wrap" Text="Почта" VerticalAlignment="Top" x:Name="EnterMail" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="129,42,0,0" TextWrapping="Wrap" Text="Добро Пожаловать" VerticalAlignment="Top" x:Name="Welcome" FontSize="22" Grid.ColumnSpan="2" Foreground="Black"/>
        <Button Content="Регистрация" HorizontalAlignment="Left" Margin="20,170,0,0" VerticalAlignment="Top" x:Name="Register" Click="Register_Click" Background="#FF498C51" Height="40" Width="114" Grid.Column="1"/>
        <Button Content="Восстановить пароль" HorizontalAlignment="Left" Margin="129,202,0,0" VerticalAlignment="Top" Background="#FF498C51" Height="20" Width="121" BorderBrush="#FFFFFDFD"/>
        <TextBox x:Name="mailBox" HorizontalAlignment="Left" Margin="129,111,0,0" TextWrapping="Wrap" Text="Введите почту" VerticalAlignment="Top" Width="120" Opacity="0.4"/>
        <TextBox x:Name="passBox" HorizontalAlignment="Left" Margin="130,170,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" Width="120" Opacity="0.4"/>

    </Grid>
</Window>
